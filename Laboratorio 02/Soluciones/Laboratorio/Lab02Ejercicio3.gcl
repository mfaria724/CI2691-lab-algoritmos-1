[
   CONST 
     A: int;
     B: int;
     C: int;
   VAR
     maximo: int;

   { a != b /\ b != c /\ a != c }

   if a > b /\ a > c ->
      maximo := a
   [] b > a /\ b > c ->
      maximo := b
   [] c > a /\ c > b ->
      maximo := c
   fi
   
   { (a > b /\ a > c /\ maximo = a) \/ (b > a /\ b > c /\ maximo = b) \/ (c > a /\ c > b /\ maximo = c) }
]
